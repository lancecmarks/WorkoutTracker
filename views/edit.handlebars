  <div id="workoutEdit">
    <form action="/" method="post">
      <fieldset>
        <legend>Workout Entry Form</legend>
        <input type="hidden" name="id" value="{{edit.id}}">
        <label for="name">Name:</label>
        <input type="text" name="name" id="entryName" value="{{edit.name}}" required>*required<br>
       
        <label for="reps">Reps:</label>
        <input type="number" name="reps" id="entryReps" value="{{edit.reps}}"><br>
       
        <label for="weight">Weight:</label>
        <input type="number" name="weight" id="entryWeight" value="{{edit.weight}}"><br>
       
        <label for="date">Date:</label>
        <input type="date" name="date" id="entryDate" value="{{edit.date}}"><br>
       
        <label for="scale">Units:</label>
        <input type="number" name="scale" value="{{edit.scale}}" id="entryUnits0">0 = lbs 1 = kgs
        
        <button type="submit" name="ProcessWorkout" value="ProcessWorkout">Submit</button>
      </fieldset>
    </form>
  </div>
